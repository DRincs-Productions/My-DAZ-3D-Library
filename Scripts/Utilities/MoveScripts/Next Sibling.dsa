// Source: 13176-42_DefaultResourcesContent: ./Scripts/Utilities/Move Scripts/Next Sibling.dsa

(function(){
	
	var oNode = Scene.getPrimarySelection();
	if( !oNode ){
		return;
	}
	
	var oParent = oNode.getNodeParent();
	if( !oParent ){
		return;
	}
	
	var nChildren = oParent.getNumNodeChildren();
	if( nChildren < 2 ){
		return;
	}
	
	var oNodeChild;
	var nIdx;
	
	for( var i = 0; i < nChildren; i += 1 ){
		oNodeChild = oParent.getNodeChild( i );
		if( oNodeChild != oNode ){
			continue;
		}
		
		nIdx = (i + 1) % nChildren;
		oNodeChild = oParent.getNodeChild( nIdx );
		oNode.select( false );
		oNodeChild.select( true );
		
		break;
	}
	
})();
